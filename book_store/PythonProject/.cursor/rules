# Cursor IDE 高级规则配置文件
# 这个文件控制 Cursor IDE 的所有高级行为和外观设置

# 编码和格式规则 - 控制代码的基本格式化规则
[format]
indent_style = space  # 缩进类型：使用空格（space）或制表符（tab）
indent_size = 4       # 缩进大小：每级缩进的空格数
end_of_line = cr      # 行尾类型：lf (Unix), crlf (Windows), cr (Mac)
charset = utf-8       # 文件编码：默认使用 UTF-8
trim_trailing_whitespace = true  # 是否自动删除行尾空格
insert_final_newline = true      # 是否在文件末尾自动添加空行
max_line_length = 120            # 最大行长度：每行代码的最大字符数

# 语言特定设置 - Python 语言的特殊配置
[language.python]
formatter = "black"      # 代码格式化工具：使用 Black 格式化 Python 代码
linter = "flake8"        # 代码检查工具：使用 Flake8 检查 Python 代码
auto_import = true       # 是否自动导入缺失的模块
doc_style = "google"     # 文档注释风格：支持 "google", "numpy", "sphinx"
type_checking = true     # 是否启用类型检查

# 语言特定设置 - JavaScript 语言的特殊配置
[language.javascript]
formatter = "prettier"  # 代码格式化工具：使用 Prettier 格式化 JavaScript 代码
linter = "eslint"       # 代码检查工具：使用 ESLint 检查 JavaScript 代码
prefer_const = true     # 是否优先使用 const 声明变量
semicolons = true       # 是否在语句末尾添加分号

# 语言特定设置 - TypeScript 语言的特殊配置
[language.typescript]
extends = "language.javascript"  # 继承 JavaScript 的所有设置
strict_null_checks = true        # 是否启用严格的空值检查
no_implicit_any = true           # 是否禁止隐式的 any 类型

# AI 代码补全设置 - 控制 AI 助手的行为
[ai]
enable = true                 # 是否启用 AI 功能
suggest_imports = true        # 是否自动建议导入
suggest_variable_names = true # 是否建议变量名称
auto_doc = true               # 是否自动生成文档注释
code_snippets = true          # 是否提供代码片段建议
context_window = 5000         # AI 上下文窗口大小（字符数）
temperature = 0.7             # AI 创造性参数 (0.0-1.0)，越高创造性越强

# 编辑器行为 - 控制编辑器的基本行为
[editor]
word_wrap = false                # 是否启用自动换行
minimap = true                   # 是否显示代码缩略图
smooth_scrolling = true          # 是否启用平滑滚动
cursor_blinking = "phase"        # 光标闪烁模式："blink", "smooth", "phase", "expand", "solid"
rulers = [80, 88, 100]           # 显示垂直标尺的列位置
scroll_beyond_last_line = true   # 是否允许滚动超过最后一行
find_case_sensitive = false      # 查找时是否区分大小写
find_whole_words = false         # 查找时是否匹配整个单词
find_regex = false               # 查找时是否使用正则表达式

# 检查和校验 - 控制代码诊断和建议
[diagnostics]
enable = true                     # 是否启用诊断功能
inline_suggestions = true         # 是否显示内联建议
fix_on_save = false               # 是否在保存时自动修复问题
severity_levels = ["error", "warning", "info", "hint"]  # 显示的诊断级别

# 外观设置 - 控制 IDE 外观
[appearance]
theme = "default"                 # 主题名称
font_family = "JetBrains Mono, Menlo, Monaco, 'Courier New', monospace"  # 字体系列
font_size = 14                    # 字体大小
line_height = 0.3                 # 行高倍数
font_ligatures = true             # 是否启用字体连字

# 文件关联 - 控制文件类型识别
[files]
associations = { "*.njk" = "html", "*.env.*" = "dotenv" }  # 特定文件扩展名的语言关联
exclude_patterns = ["**/.git", "**/node_modules", "**/__pycache__"]  # 忽略的文件模式
encoding = "utf8"                 # 默认文件编码

# 自定义命令 - 在特定事件触发自定义命令
[commands]
pre_save = ""     # 保存前执行的命令
post_save = ""    # 保存后执行的命令
on_open = ""      # 打开文件时执行的命令 

